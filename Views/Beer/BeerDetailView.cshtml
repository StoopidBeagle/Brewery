@model app.Models.Beer

<table>
    <tr>
        <td>Brewer</td>
        <td>@Model.Brewer</td>
    </tr>
    <tr>
        <td>Name</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Type</td>
        <td>@Model.Type</td>
    </tr>
    <tr>
        <td>ABV</td>
        <td>@Model.ABV</td>
    </tr>
    <tr>
        <td>Calories</td>
        <td>@Model.Calories</td>
    </tr>
    @if (@Model.Color != null)
    {
    <tr>
        <td>Color</td>
        <td bgcolor="@Model.Color"></td>
    </tr>
    }
</table>
